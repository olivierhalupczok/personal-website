---
import { Image } from 'astro:assets';
import silesiaLogo from '/public/imgs/silesia-ai.png';
import warsawLogo from '/public/imgs/warsaw-ai.png';
import wroclawLogo from '/public/imgs/wroclaw-ai.png';

const calendars = [
  { name: "Silesia AI", region: "Silesia", logo: silesiaLogo, url: "https://lu.ma/silesia-ai?utm_source=olivierh-dev" },
  { name: "Warsaw AI", region: "Warsaw", logo: warsawLogo, url: "https://lu.ma/warsaw-ai-events?utm_source=olivierh-dev" },
  { name: "Wrocław AI", region: "Wrocław", logo: wroclawLogo, url: "https://lu.ma/wroclaw-ai?utm_source=olivierh-dev" }
];
---

<section id="community">
  <div class="container">
    <h2 data-animate="left">Community</h2>
    <p class="community-intro" data-animate="blur" data-delay="1">
      As a social spirit and AI enthusiast, I curate AI event calendars across Poland, helping builders find meetups, workshops, and conferences.
      Over <strong>2,000 views</strong> and more than <strong>100 subscribers</strong>.
    </p>
  </div>

  <div class="carousel-3d" data-animate="scale" data-delay="2">
    <div class="carousel-scene">
      <div class="carousel-rotator">
        {calendars.map((cal, i) => (
          <a href={cal.url} target="_blank" rel="noopener" class="carousel-item glass" data-index={i}>
            <Image src={cal.logo} alt={cal.name} width={240} height={240} loading="lazy" />
            <h3>{cal.name}</h3>
            <span class="cta">View calendar →</span>
          </a>
        ))}
      </div>
    </div>
    <div class="carousel-nav">
      <button class="nav-btn prev" aria-label="Previous">‹</button>
      <button class="nav-btn next" aria-label="Next">›</button>
    </div>
  </div>
</section>

<style>
  #community {
    padding: 5rem 0 3rem;
  }

  .community-intro {
    margin-top: 1.5rem;
    max-width: 540px;
    color: #a0a0b0;
  }

  .carousel-3d {
    margin-top: 2.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow-x: clip;
  }

  .carousel-scene {
    width: 100%;
    max-width: 800px;
    height: 360px;
    perspective: 1000px;
    overflow: visible;
  }

  .carousel-rotator {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .carousel-item {
    position: absolute;
    width: 200px;
    left: 50%;
    top: 50%;
    margin-left: -100px;
    margin-top: -140px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.5rem;
    text-decoration: none;
    text-align: center;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1),
                opacity 0.6s ease,
                filter 0.6s ease;
  }

  .carousel-item[data-index="0"] {
    transform: rotateY(0deg) translateZ(280px);
  }
  .carousel-item[data-index="1"] {
    transform: rotateY(120deg) translateZ(280px);
  }
  .carousel-item[data-index="2"] {
    transform: rotateY(240deg) translateZ(280px);
  }

  .carousel-item img {
    width: 120px;
    height: 120px;
    border-radius: 16px;
    margin-bottom: 1rem;
    transition: transform 0.3s;
  }

  .carousel-item:hover img {
    transform: scale(1.05);
  }

  .carousel-item h3 {
    color: #fff;
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
  }

  .carousel-item .cta {
    margin-top: 1rem;
    color: #2563eb;
    font-size: 0.9rem;
    font-weight: 500;
    transition: transform 0.2s, color 0.2s;
  }

  .carousel-item:hover .cta {
    transform: translateX(4px);
    color: #3b82f6;
  }

  .carousel-item:hover {
    border-color: rgba(37, 99, 235, 0.4);
    box-shadow: 0 8px 32px rgba(37, 99, 235, 0.15);
  }

  .carousel-nav {
    display: flex;
    gap: 1rem;
    margin-top: 2.5rem;
    position: relative;
    z-index: 10;
  }

  .nav-btn {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.05);
    color: #fff;
    font-size: 1.5rem;
    line-height: 1;
    cursor: pointer;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: 2px;
  }

  .nav-btn:hover {
    background: rgba(37, 99, 235, 0.2);
    border-color: rgba(37, 99, 235, 0.4);
  }

  @media (max-width: 600px) {
    .carousel-3d {
      margin-top: 3.5rem;
    }
    .carousel-scene {
      height: 280px;
      perspective: 800px;
    }
    .carousel-item {
      width: 160px;
      margin-left: -80px;
      padding: 1rem;
    }
    .carousel-item[data-index="0"] { transform: rotateY(0deg) translateZ(180px); }
    .carousel-item[data-index="1"] { transform: rotateY(120deg) translateZ(180px); }
    .carousel-item[data-index="2"] { transform: rotateY(240deg) translateZ(180px); }
    .carousel-item img {
      width: 90px;
      height: 90px;
    }
  }
</style>

<script>
  const rotator = document.querySelector('.carousel-rotator') as HTMLElement;
  const items = document.querySelectorAll('.carousel-item') as NodeListOf<HTMLElement>;
  const prevBtn = document.querySelector('.nav-btn.prev');
  const nextBtn = document.querySelector('.nav-btn.next');

  let currentAngle = 0;
  const step = 120; // 360 / 3 items

  function updateVisibility() {
    // Normalize angle to find front item (0, 1, or 2)
    const normalized = ((currentAngle % 360) + 360) % 360;
    const frontIndex = Math.round(normalized / step) % 3;

    items.forEach((item, i) => {
      if (i === frontIndex) {
        item.style.opacity = '1';
        item.style.filter = 'blur(0)';
        item.style.pointerEvents = 'auto';
      } else {
        item.style.opacity = '0.3';
        item.style.filter = 'blur(2px)';
        item.style.pointerEvents = 'none';
      }
    });
  }

  function rotate(direction: number) {
    currentAngle += direction * step;
    rotator.style.transform = `rotateY(${-currentAngle}deg)`;
    updateVisibility();
  }

  // Initial state
  updateVisibility();

  prevBtn?.addEventListener('click', () => rotate(-1));
  nextBtn?.addEventListener('click', () => rotate(1));

  // Auto-rotate every 4 seconds
  let autoRotate = setInterval(() => rotate(1), 4000);

  // Pause on hover
  rotator?.addEventListener('mouseenter', () => clearInterval(autoRotate));
  rotator?.addEventListener('mouseleave', () => {
    autoRotate = setInterval(() => rotate(1), 4000);
  });

  // Touch/swipe support
  let touchStartX = 0;
  let touchEndX = 0;
  const scene = document.querySelector('.carousel-scene') as HTMLElement;

  scene?.addEventListener('touchstart', (e) => {
    touchStartX = e.touches[0].clientX;
    clearInterval(autoRotate);
  }, { passive: true });

  scene?.addEventListener('touchmove', (e) => {
    touchEndX = e.touches[0].clientX;
  }, { passive: true });

  scene?.addEventListener('touchend', () => {
    const diff = touchStartX - touchEndX;
    const threshold = 50;
    if (Math.abs(diff) > threshold) {
      rotate(diff > 0 ? 1 : -1);
    }
    autoRotate = setInterval(() => rotate(1), 4000);
  });
</script>
