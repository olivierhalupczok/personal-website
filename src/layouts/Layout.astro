---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Olivier Halupczok - GenAI Engineer",
  description = "GenAI Engineer with 3 years building AI products. I design and ship production chatbots, multi-agent systems, and RAG pipelines."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Olivier Halupczok" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Critical CSS - Inlined for first paint -->
    <style is:inline>
      *,*::before,*::after{box-sizing:border-box;margin:0;padding:0}html{scroll-behavior:smooth}body{font-family:system-ui,-apple-system,BlinkMacSystemFont,'Segoe UI',sans-serif;background:#0f0f1a;color:#fff;line-height:1.6;min-height:100vh;overflow-x:hidden}h1,h2,h3{line-height:1.2;font-weight:600}h1{font-size:clamp(2.5rem,5vw,4rem)}h2{font-size:clamp(1.75rem,3vw,2.5rem);color:#a0a0b0}h3{font-size:1.25rem}p{color:#a0a0b0}a{color:#6366f1;text-decoration:none;transition:color .2s}a:hover{color:#818cf8}.container{max-width:1100px;margin:0 auto;padding:0 1.5rem}section{padding:5rem 0}.glass{background:rgba(255,255,255,.03);backdrop-filter:blur(12px);-webkit-backdrop-filter:blur(12px);border:1px solid rgba(255,255,255,.08);border-radius:16px}nav{position:fixed;top:0;left:0;right:0;z-index:100;padding:1rem 0;transition:all .3s}nav.scrolled{background:rgba(255,255,255,.03);backdrop-filter:blur(16px);-webkit-backdrop-filter:blur(16px);border-bottom:1px solid rgba(255,255,255,.06);box-shadow:0 4px 30px rgba(0,0,0,.1)}nav .container{display:flex;justify-content:space-between;align-items:center}.nav-links{display:flex;gap:2rem;list-style:none}.nav-links a{color:#a0a0b0;font-size:.9rem;transition:color .2s}.nav-links a:hover{color:#fff}.logo{font-weight:700;font-size:1.25rem;color:#fff}.hero{min-height:100vh;display:flex;align-items:center;position:relative}.hero-content{position:relative;z-index:1}.hero h1{margin-bottom:.5rem}.hero .subtitle{font-size:clamp(1.25rem,2.5vw,1.75rem);color:#6366f1;margin-bottom:1rem}.hero .typing{min-height:2rem;color:#a0a0b0}.hero .cta-group{display:flex;align-items:center;gap:1rem;margin-top:2rem;flex-wrap:wrap}.btn{display:inline-flex;align-items:center;gap:.5rem;padding:.875rem 1.75rem;border-radius:8px;font-weight:500;transition:background .2s,transform .2s;cursor:pointer;border:none;font-size:1rem}.btn img{flex-shrink:0}.btn-primary{background:#6366f1;color:#fff}.btn-primary:hover{background:#818cf8;color:#fff;transform:translateY(-2px)}.btn-ghost{background:transparent;color:#a0a0b0;border:1px solid rgba(255,255,255,.1)}.btn-ghost:hover{color:#fff;border-color:rgba(255,255,255,.2)}.social-links{display:flex;gap:1rem}.social-links a{width:40px;height:40px;display:flex;align-items:center;justify-content:center;border-radius:8px;color:#a0a0b0;transition:all .2s}.social-links a:hover{color:#fff;background:rgba(255,255,255,.05)}.sr-only{position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);border:0}
    </style>

    <!-- Deferred CSS - Load async -->
    <link rel="preload" href="/styles/deferred.css" as="style" onload="this.onload=null;this.rel='stylesheet'" />
    <noscript><link rel="stylesheet" href="/styles/deferred.css" /></noscript>
  </head>
  <body>
    <!-- Background Blobs -->
    <div class="bg-blobs" aria-hidden="true">
      <div class="blob blob-1"></div>
      <div class="blob blob-2"></div>
      <div class="blob blob-3"></div>
    </div>

    <slot />

    <!-- Scroll Observer - Inline for size -->
    <script is:inline>
      const o=new IntersectionObserver(e=>{e.forEach(e=>{e.isIntersecting&&(e.target.classList.add('visible'),o.unobserve(e.target))})},{threshold:.1});
      document.querySelectorAll('[data-animate]').forEach(e=>o.observe(e));
      const n=document.querySelector('nav');
      window.addEventListener('scroll',()=>{n.classList.toggle('scrolled',window.scrollY>50)},{passive:true});

      // Track section views
      const tracked=new Set();
      const s=new IntersectionObserver(e=>{e.forEach(e=>{if(e.isIntersecting&&!tracked.has(e.target.id)&&window.va){tracked.add(e.target.id);window.va('event',{name:'Section Viewed',data:{section:e.target.id}})}})},{threshold:.5});
      document.querySelectorAll('section[id]').forEach(e=>s.observe(e));
    </script>

    <!-- Vercel Analytics - loaded async, doesn't affect first paint -->
    <script defer src="/_vercel/insights/script.js"></script>
  </body>
</html>
